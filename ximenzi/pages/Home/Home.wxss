page {
    background-color: white;
}
.container {
    display: flex;
    flex-flow: column nowrap;
}
/* profile-bar */
.profile-bar {
    display: flex;
    flex-flow: row-reverse nowrap;
    height: 100rpx;
    align-items: center;
}

.profile {
    height: 50rpx;
    width: 50rpx;
    margin-right: 20rpx;
}


/* logo-bar */
.logo-bar {
    margin-top: 10rpx;
    display: flex;
    flex-flow: row nowrap;
    height: 150rpx;
    align-items: center;
    justify-content: center;
}

.logo {
    height: 74px;
    width: 229px;
}

/* home-box */
.search-box {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    background: white;
    height: 100rpx;
    margin: 0 25rpx 0 25rpx;
    box-shadow: 2rpx 2rpx 2rpx #CFCFCF;
    border-radius: 4rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.search-input {
    flex-grow: 1;
    font-size: 36rpx;
    font-family: "Microsoft YaHei UI";
}

.search-img {
    height: 50rpx;
    width: 50rpx;
    margin-left: 20rpx;
}

/* search-option-bar */
.search-option-bar {
    opacity: 0;
    padding-bottom: 200rpx;
    /*position: relative;*/
    margin-top: 20rpx;
    display: flex;
    flex-flow: row nowrap;
    height: 180rpx;
    align-items: center;
    animation: rise 3s cubic-bezier(0.19, 1, 0.22, 1) .25s forwards;
}
@keyframes rise{
  0% {opacity: 0;transform: translate3d(0,100%,0);}
  50% {opacity: 0.5;}
  100% {opacity: 1;transform: translate3d(0,0rpx,0);}
}
.search-option-item {
    display: flex;
    flex-flow: column nowrap;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
}

.search-option-icon {
    height: 110rpx;
    width: 110rpx;
    /*animation: sway 5s linear;*/
}
